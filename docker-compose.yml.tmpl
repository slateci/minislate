version: '3.1'
services:
  db:
    image: dwmkerr/dynamodb
    restart: always
  kube:
    build:
      context: kube/
    restart: always
    tty: true
    privileged: true
    volumes:
      - /lib/modules:/lib/modules
      - kubernetes:/etc/kubernetes
      - /sys/fs/cgroup:/sys/fs/cgroup:ro
    ports:
      - 30000-30200:30000-30200
# {PORTS}
  nfs:
    image: itsthenetwork/nfs-server-alpine
    restart: always
    privileged: true
    tty: true
    environment:
      - SHARED_DIRECTORY=/srv
    volumes:
      - nfsdata:/srv
  slate:
    depends_on:
      - db
      - kube
    build:
      context: slate/
    environment:
      - SLATE_awsEndpoint=db:8000
      - SLATE_allowAdHocApps=true
    restart: always
    command: /usr/bin/slate-service
    stdin_open: true
    tty: true
    volumes:
      - kubernetes:/etc/kubernetes
# {VOLUMES}
    ports:
      - 5000:5000
      - 5100:5100
      - 18080:18080
volumes:
  kubernetes:
  nfsdata:
