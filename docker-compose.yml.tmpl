version: '3.1'
services:
  db:
    image: dwmkerr/dynamodb
    restart: always
  kube:
    image: rancher/k3s:v1.19.5-k3s1-amd64
    restart: always
    tty: true
    privileged: true
    command: server --https-listen-port 6443 --kube-apiserver-arg service-node-port-range=30000-30100
    volumes:
      - /lib/modules:/lib/modules
      - kubernetes:/etc/rancher
      - /sys/fs/cgroup:/sys/fs/cgroup:ro
    ports:
      - 30000-30100:30000-30100
# {PORTS}
  slate:
    depends_on:
      - db
      - kube
    image: hub.opensciencegrid.org/slate/minislate:1.0.1
    command: /usr/bin/supervisord -c /etc/supervisord.conf
    stdin_open: true
    tty: true
    volumes:
      - kubernetes:/etc/rancher
# {VOLUMES}
    ports:
      - 5000:5000
      - 5100:5100
      - 18080:18080
volumes:
  kubernetes:
  nfsdata:
